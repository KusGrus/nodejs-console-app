<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="app.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%= title %></title>
</head>
<body>
<div class="container">
    <h1><%= title %></h1>

    <% if (created) { %>
        <div class="alert alert-success">Note has been created</div>
    <% } %>

    <form action="/" method="post" class="mb-2">
        <div class="form-group-mb-2">
            <input type="text" class="form-control" name="title" required >
        </div>

        <button class="btn btn-primary mt-3" type="submit">Create</button>
    </form>



    <% if (notes?.length) { %>
        <div class="card mt-5">
            <ul class="list-group">
                <% for (let note of notes) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center" data-id="<%= note.id %>">
                        <span><%= note.title %></span>
                        <div class="buttons">
                            <button class="btn btn-primary mr-3" data-type="edit">Edit</button>
                            <button class="btn btn-danger" data-type="remove">&times;</button>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>
    <% } else { %>
        <p>No notes</p>
    <% } %>
</div>

</body>
</html>
